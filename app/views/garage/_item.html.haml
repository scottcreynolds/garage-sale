.col-lg-3.col-sm-4.col-xs-6
  %a{:href => "#", :title => item.name }
    %img.thumbnail.img-responsive{:src => item.primary_image }
  .caption
    %b="$#{item.price} - #{item.name}"
    %p=item.description
    %p
      %a.btn.btn-warning{ href: "mailto:scott@scottcreynolds.com?subject=#{item.name}", target: "_blank"} Contact
      - unless item.details_link.blank?
        %a.btn.btn-default{:href => item.details_link, target: "_blank", :role => "button"} More Details
  .secondary-images.hidden
    - item.secondary_image_urls.each do |image_url|
      %img.img-responsive{:src => image_url}
